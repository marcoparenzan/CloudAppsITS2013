@model Company.ViewModels.ArticoloViewModel

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<script type="text/javascript">

    $(function () {
        $.validator.methods.number = function (value, element) {
            return this.optional(element) || /\d{1,3}(\.\d{3})*(\.\d\d)?|\.\d\d/.test(value);
        }

    });

</script>
@using (Html.BeginForm("Edit")) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Articolo</legend>

        @Html.Hidden("id", (string) ViewBag.id)

        <div class="editor-label">
            @Html.LabelFor(model => model.Codice)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Codice)
            @Html.ValidationMessageFor(model => model.Codice)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Descrizione)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Descrizione)
            @Html.ValidationMessageFor(model => model.Descrizione)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Categoria)
        </div>
        <div class="editor-field">
            <select id="Categoria" name="Categoria">
                <option value="1">Base</option>
                <option value="2">Super</option>
                <option value="3">Pro</option>
            </select>
            @Html.ValidationMessageFor(model => model.Categoria)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Prezzo)
            @Html.ValidationMessageFor(model => model.Prezzo)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.PromozioneInOfferta)
            @Html.ValidationMessageFor(model => model.PromozioneInOfferta)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.PromozioneMetaPrezzo)
            @Html.ValidationMessageFor(model => model.PromozioneMetaPrezzo)
        </div>

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
